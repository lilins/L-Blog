extends ../common/layout.pug

block body
  div(id="postList")
    each post in posts
      h1 #{post.postTitle}
      p #{post.postAuthor}
      p #{post.postContent}
      button(class="btn btn-primary" class="post-edit" postid=post.id) edit
      button(class="btn btn-primary" class="post-delete" postid=post.id) delete
      if single
        div
          h3 Comment
          each comment in post.comments
            h4 #{comment.commentTitle}
            p @#{comment.commentToUser}
            span Time #{comment.commentDate}
            p #{comment.commentContent}
          div
            input(type="text", class="form-control", id="comment-title", placeholder="Title")
            input(type="text", class="form-control", id="comment-content", placeholder="Content")
            button(class="btn btn-primary" class="comment-add" id="comment-add" postid=post.id) add comment